<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_sky"
    tools:context="com.blits.ospf.ospf.app.MainActivity">


    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/texxx"
        android:paddingTop="30dp"
        android:layout_width="fill_parent"
        android:typeface="normal"
        android:layout_height="wrap_content"
        android:text="Masukkan Jumlah Router Yang Anda Miliki !!"
        flatui:theme="Snow"
        android:textSize="35dp"/>


    <com.cengalabs.flatui.views.FlatEditText
        android:hint="Router"
        android:layout_centerVertical="true"
        android:id="@+id/editTextInputRouter"
        flatui:theme="Sky"
        android:inputType="number"
        android:textStyle="normal"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/buttonSelanjutnyaInputRouter"
        android:layout_marginTop="10dp"
        flatui:theme="Orange"
        android:text="@string/Selanjutnya"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@+id/editTextInputRouter"
        android:layout_centerInParent="true"/>

</RelativeLayout>
