<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:background="#ff53c6ff"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="30dp"
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Router" />

                <Spinner
                    android:id="@+id/spinnerOSPFInterface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:layout_marginTop="10dp"
                android:background="#ff4f5dff"
                android:id="@+id/buttonOSPFInterface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OSPF INTERFACE" />

            <LinearLayout
                android:background="#ffffff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.cengalabs.flatui.views.FlatTextView
                    android:layout_marginTop="10dp"
                    flatui:theme="Sky"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="Ketersediaan Bandwidth" />

                <com.cengalabs.flatui.views.FlatEditText
                    android:layout_marginTop="10dp"
                    flatui:theme="Sky"
                    android:id="@+id/editTextOSPFInterface"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.cengalabs.flatui.views.FlatTextView
                    flatui:theme="Sky"
                    android:id="@+id/textViewInformasiOSPF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingTop="10dp"
                    android:text="Informasi" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>