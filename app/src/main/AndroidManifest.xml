<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blits.ospf.ospf.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name="com.blits.ospf.ospf.app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/ThemeFirst">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NamaRouter"
            android:label="@string/inputNama"
            android:theme="@style/ThemeTwo"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".InputDetailRouter"
            android:label="@string/inputdetail"
            android:theme="@style/ThemeTwo"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Cost"
            android:label="Informasi Cost Router" />
        <activity
            android:name=".InterfaceActivity"
            android:label="Informasi Interface Router" />
        <activity
            android:name=".Ospf"
            android:label="Informasi OSPF" />
        <activity
            android:theme="@style/TransparentTheme"
            android:name=".Menu" />
    </application>
</manifest>
